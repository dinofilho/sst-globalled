import React, { useEffect, useMemo, useState } from "react";

type Company = { id: string; name: string; cnpj: string; createdAt: string };
type Employee = {
  id: string;
  companyId: string;
  name: string;
  cpf: string;
  createdAt: string;
};

type Exam = {
  id: string;
  companyId: string;
  employeeId: string;
  type: "ADMISSAO" | "PERIODICO" | "RETORNO" | "MUDANCA_FUNCAO" | "DEMISSAO";
  examDate: string; // YYYY-MM-DD
  nextDate: string; // YYYY-MM-DD (opcional)
  result: "APTO" | "INAPTO" | "PENDENTE";
  clinic: string;
  doctor: string;
  notes: string;
  createdAt: string;
};

const COMPANIES_KEY = "sst_globalled_companies_v1";
const EMPLOYEES_KEY = "sst_globalled_employees_v1";
const EXAMS_KEY = "sst_globalled_exams_v1";

function uid() {
  return Math.random().toString(16).slice(2) + Date.now().toString(16);
}

function loadJSON<T>(key: string, fallback: T): T {
  try {
    const raw = localStorage.getItem(key);
    if (!raw) return fallback;
    return JSON.parse(raw) as T;
  } catch {
    return fallback;
  }
}

function saveJSON(key: string, value: any) {
  localStorage.setItem(key, JSON.stringify(value));
}

export default function Exams() {
  const [companies, setCompanies] = useState<Company[]>([]);
  const [employees, setEmployees] = useState<Employee[]>([]);
  const [exams, setExams] = useState<Exam[]>([]);
  const [query, setQuery] = useState("");
  const [editingId, setEditingId] = useState<string | null>(null);

  const [form, setForm] = useState<Omit<Exam, "id" | "createdAt">>({
    companyId: "",
    employeeId: "",
    type: "PERIODICO",
    examDate: "",
    nextDate: "",
    result: "APTO",
    clinic: "",
    doctor: "",
    notes: "",
  });

  useEffect(() => {
    const c = loadJSON<Company[]>(COMPANIES_KEY, []);
    const e = loadJSON<Employee[]>(EMPLOYEES_KEY, []);
    const x = loadJSON<Exam[]>(EXAMS_KEY, []);
    setCompanies(Array.isArray(c) ? c : []);
    setEmployees(Array.isArray(e) ? e : []);
    setExams(Array.isArray(x) ? x : []);
  }, []);

  useEffect(() => {
    saveJSON(EXAMS_KEY, exams);
  }, [exams]);

  const employeesOfCompany = useMemo(() => {
    if (!form.companyId) return [];
    return employees.filter((e) => e.companyId === form.companyId);
  }, [employees, form.companyId]);

  const filtered = useMemo(() => {
    const q = query.trim().toLowerCase();
    if (!q) return exams;

    return exams.filter((x) => {
      const companyName = companies.find((c) => c.id === x.companyId)?.name || "";
      const empName = employees.find((e) => e.id === x.employeeId)?.name || "";
      const hay = `${companyName} ${empName} ${x.type} ${x.examDate} ${x.result} ${x.clinic} ${x.doctor}`
        .toLowerCase();
      return hay.includes(q);
    });
  }, [exams, query, companies, employees]);

  function onChange<K extends keyof typeof form>(key: K, value: any) {
    setForm((prev) => ({ ...prev, [key]: value }));
  }

  function resetForm() {
    setForm({
      companyId: "",
      employeeId: "",
      type: "PERIODICO",
      examDate: "",
      nextDate: "",
      result: "APTO",
      clinic: "",
      doctor: "",
      notes: "",
    });
    setEditingId(null);
  }

  function validate() {
    if (!form.companyId) return "Selecione a empresa.";
    if (!form.employeeId) return "Selecione o funcionário.";
    if (!form.examDate) return "Informe a data do exame.";
    return null;
  }

  function handleSubmit(e: React.FormEvent) {
    e.preventDefault();
    const err = validate();
    if (err) return alert(err);

    if (editingId) {
      setExams((prev) => prev.map((x) => (x.id === editingId ? { ...x, ...form } : x)));
      resetForm();
      return;
    }

    const item: Exam = {
      id: uid(),
      createdAt: new Date().toISOString(),
      ...form,
    };

    setExams((prev) => [item, ...prev]);
    resetForm();
  }

  function editExam(x: Exam) {
    setEditingId(x.id);
    setForm({
      companyId: x.companyId,
      employeeId: x.employeeId,
      type: x.type,
      examDate: x.examDate,
      nextDate: x.nextDate,
      result: x.result,
      clinic: x.clinic,
      doctor: x.doctor,
      notes: x.notes,
    });
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  function removeExam(id: string) {
    if (!confirm("Excluir este exame?")) return;
    setExams((prev) => prev.filter((x) => x.id !== id));
    if (editingId === id) resetForm();
  }

  const companyLabel = (id: string) => companies.find((c) => c.id === id)?.name || "Empresa";
  const employeeLabel = (id: string) => employees.find((e) => e.id === id)?.name || "Funcionário";

  return (
    <div style={page}>
      <div style={card}>
        <h1 style={title}>Exames Ocupacionais</h1>
        <p style={subtitle}>Controle por funcionário (ASO): admissão, periódico, retorno, mudança de função, demissão.</p>

        {companies.length === 0 ? (
          <div style={warn}>Cadastre empresas em <b>/companies</b> primeiro.</div>
        ) : employees.length === 0 ? (
          <div style={warn}>Cadastre funcionários em <b>/employees</b> primeiro.</div>
        ) : null}

        <form onSubmit={handleSubmit} style={{ display: "grid", gap: 12, marginTop: 10 }}>
          <div style={grid2}>
            <label style={labelWrap}>
              <span style={labelText}>Empresa *</span>
              <select
                value={form.companyId}
                onChange={(e) => {
                  onChange("companyId", e.target.value);
                  onChange("employeeId", "");
                }}
                style={input}
              >
                <option value="">Selecione...</option>
                {companies.map((c) => (
                  <option key={c.id} value={c.id}>
                    {c.name}
                  </option>
                ))}
              </select>
            </label>

            <label style={labelWrap}>
              <span style={labelText}>Funcionário *</span>
              <select
                value={form.employeeId}
                onChange={(e) => onChange("employeeId", e.target.value)}
                style={input}
                disabled={!form.companyId}
              >
                <option value="">Selecione...</option>
                {employeesOfCompany.map((e) => (
                  <option key={e.id} value={e.id}>
                    {e.name} ({e.cpf})
                  </option>
                ))}
              </select>
            </label>
          </div>

          <div style={grid2}>
            <label style={labelWrap}>
              <span style={labelText}>Tipo</span>
              <select value={form.type} onChange={(e) => onChange("type", e.target.value)} style={input}>
                <option value="ADMISSAO">Admissão</option>
                <option value="PERIODICO">Periódico</option>
                <option value="RETORNO">Retorno ao trabalho</option>
                <option value="MUDANCA_FUNCAO">Mudança de função</option>
                <option value="DEMISSAO">Demissão</option>
              </select>
            </label>

            <label style={labelWrap}>
              <span style={labelText}>Resultado</span>
              <select value={form.result} onChange={(e) => onChange("result", e.target.value)} style={input}>
                <option value="APTO">APTO</option>
                <option value="INAPTO">INAPTO</option>
                <option value="PENDENTE">PENDENTE</option>
              </select>
            </label>
          </div>

          <div style={grid2}>
            <label style={labelWrap}>
              <span style={labelText}>Data do exame *</span>
              <input type="date" value={form.examDate} onChange={(e) => onChange("examDate", e.target.value)} style={input} />
            </label>

            <label style={labelWrap}>
              <span style={labelText}>Próxima data (opcional)</span>
              <input type="date" value={form.nextDate} onChange={(e) => onChange("nextDate", e.target.value)} style={input} />
            </label>
          </div>

          <div style={grid2}>
            <Field label="Clínica" placeholder="Nome da clínica" value={form.clinic} onChange={(v) => onChange("clinic", v)} />
            <Field label="Médico" placeholder="Nome do médico" value={form.doctor} onChange={(v) => onChange("doctor", v)} />
          </div>

          <TextArea label="Observações" placeholder="Detalhes do ASO, restrições, etc." value={form.notes} onChange={(v) => onChange("notes", v)} />

          <div style={{ display: "flex", gap: 10, flexWrap: "wrap", marginTop: 4 }}>
            <button type="submit" style={editingId ? btnPrimaryAlt : btnPrimary}>
              {editingId ? "Salvar Alteração" : "Cadastrar Exame"}
            </button>
            <button type="button" onClick={resetForm} style={btn}>Limpar</button>
          </div>
        </form>
      </div>

      <div style={card}>
        <div style={{ display: "flex", gap: 12, alignItems: "center", flexWrap: "wrap" }}>
          <h2 style={{ margin: 0 }}>Registros</h2>
          <span style={pill}>{exams.length} exames</span>
          <div style={{ flex: 1 }} />
          <input value={query} onChange={(e) => setQuery(e.target.value)} placeholder="Buscar por empresa, funcionário..." style={search} />
        </div>

        <div style={{ marginTop: 14, display: "grid", gap: 10 }}>
          {filtered.length === 0 ? (
            <div style={empty}>Nenhum exame encontrado.</div>
          ) : (
            filtered.map((x) => (
              <div key={x.id} style={row}>
                <div style={{ minWidth: 0 }}>
                  <div style={rowTitle}>{employeeLabel(x.employeeId)}</div>
                  <div style={rowSub}>
                    <b>Empresa:</b> {companyLabel(x.companyId)} • <b>Tipo:</b> {x.type} •{" "}
                    <b>Data:</b> {x.examDate} • <b>Resultado:</b> {x.result}
                  </div>
                  {(x.clinic || x.doctor) ? (
                    <div style={rowSub}>
                      {x.clinic ? <><b>Clínica:</b> {x.clinic} • </> : null}
                      {x.doctor ? <><b>Médico:</b> {x.doctor}</> : null}
                    </div>
                  ) : null}
                  {x.nextDate ? <div style={rowSub}><b>Próximo:</b> {x.nextDate}</div> : null}
                  {x.notes ? <div style={rowNotes}>{x.notes}</div> : null}
                </div>

                <div style={{ display: "flex", gap: 8, flexShrink: 0 }}>
                  <button onClick={() => editExam(x)} style={btnSmall}>Editar</button>
                  <button onClick={() => removeExam(x.id)} style={btnSmallDanger}>Excluir</button>
                </div>
              </div>
            ))
          )}
        </div>
      </div>
    </div>
  );
}

function Field(props: { label: string; placeholder?: string; value: string; onChange: (v: string) => void }) {
  return (
    <label style={labelWrap}>
      <span style={labelText}>{props.label}</span>
      <input value={props.value} onChange={(e) => props.onChange(e.target.value)} placeholder={props.placeholder} style={input} />
    </label>
  );
}

function TextArea(props: { label: string; placeholder?: string; value: string; onChange: (v: string) => void }) {
  return (
    <label style={labelWrap}>
      <span style={labelText}>{props.label}</span>
      <textarea value={props.value} onChange={(e) => props.onChange(e.target.value)} placeholder={props.placeholder} style={{ ...input, minHeight: 90, resize: "vertical", paddingTop: 10 }} />
    </label>
  );
}

const page: React.CSSProperties = { minHeight: "100vh", background: "#0b0b0b", color: "#fff", padding: 16, display: "grid", gap: 14, alignContent: "start" };
const card: React.CSSProperties = { background: "#111", border: "1px solid #222", borderRadius: 12, padding: 16, boxShadow: "0 10px 30px rgba(0,0,0,.25)" };
const title: React.CSSProperties = { margin: 0, fontSize: 22 };
const subtitle: React.CSSProperties = { marginTop: 6, opacity: 0.75 };
const grid2: React.CSSProperties = { display: "grid", gap: 12, gridTemplateColumns: "repeat(auto-fit, minmax(210px, 1fr))" };
const warn: React.CSSProperties = { marginTop: 10, padding: 12, borderRadius: 12, border: "1px solid #3b2f00", background: "#1a1400", color: "#ffd57a" };
const labelWrap: React.CSSProperties = { display: "grid", gap: 6 };
const labelText: React.CSSProperties = { fontSize: 12, opacity: 0.75 };
const input: React.CSSProperties = { width: "100%", padding: "12px 12px", borderRadius: 10, border: "1px solid #2a2a2a", background: "#0c0c0c", color: "#fff", outline: "none" };
const btnBase: React.CSSProperties = { padding: "12px 14px", borderRadius: 10, border: "1px solid #2a2a2a", background: "#151515", color: "#fff", fontWeight: 600 };
const btn: React.CSSProperties = { ...btnBase };
const btnPrimary: React.CSSProperties = { ...btnBase, background: "#0a7a33", border: "none" };
const btnPrimaryAlt: React.CSSProperties = { ...btnBase, background: "#0a6a7a", border: "none" };
const search: React.CSSProperties = { ...input, maxWidth: 320, padding: "10px 12px" };
const pill: React.CSSProperties = { fontSize: 12, padding: "4px 10px", border: "1px solid #2a2a2a", borderRadius: 999, opacity: 0.8 };
const row: React.CSSProperties = { border: "1px solid #222", background: "#0c0c0c", borderRadius: 12, padding: 14, display: "flex", gap: 12, alignItems: "flex-start", justifyContent: "space-between" };
const rowTitle: React.CSSProperties = { fontWeight: 800, marginBottom: 4 };
const rowSub: React.CSSProperties = { fontSize: 12, opacity: 0.8, lineHeight: 1.5 };
const rowNotes: React.CSSProperties = { marginTop: 8, fontSize: 12, opacity: 0.75, borderTop: "1px dashed #222", paddingTop: 8 };
const empty: React.CSSProperties = { padding: 14, borderRadius: 12, border: "1px dashed #333", opacity: 0.7 };
const btnSmall: React.CSSProperties = { padding: "10px 12px", borderRadius: 10, border: "1px solid #2a2a2a", background: "#151515", color: "#fff", fontWeight: 700 };
const btnSmallDanger: React.CSSProperties = { ...btnSmall, background: "#2a0c0c", border: "1px solid #4a1b1b" };